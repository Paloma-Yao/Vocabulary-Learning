<body>
    <div id="content">
        <h1>Vocabulary Testing</h1>

        <!-- 段落展示区域 -->
        <div class="paragraph" id="paragraph">
            AI生成的段落将在这里显示。
        </div>

        <!-- 反馈选项 -->
        <div class="feedback">
            <h3>请标记你不熟悉的单词：</h3>
            <label><input type="checkbox" name="word1" value="word1"> Word1</label>
            <label><input type="checkbox" name="word2" value="word2"> Word2</label>
            <label><input type="checkbox" name="word3" value="word3"> Word3</label>
        </div>

        <!-- 难度滑块 -->
        <div class="feedback">
            <h3>请给段落的难度打分：</h3>
            <input type="range" min="1" max="10" value="5" class="slider" id="difficultySlider">
        </div>

        <!-- 提交按钮 -->
        <button onclick="submitFeedback()">提交反馈</button>
    </div>

    <script>
        function submitFeedback() {
            // 获取用户选择的难词
            let selectedWords = [];
            document.querySelectorAll('input[type="checkbox"]:checked').forEach((checkbox) => {
                selectedWords.push(checkbox.value);
            });

            // 获取难度评分
            let difficulty = document.getElementById("difficultySlider").value;

            // 将数据发送到后端
            console.log("Selected Words:", selectedWords);
            console.log("Difficulty Rating:", difficulty);

            // 模拟发送数据到后端
            alert("反馈已提交！");

            // TODO: 调用API生成下一段内容
        }
    </script>
